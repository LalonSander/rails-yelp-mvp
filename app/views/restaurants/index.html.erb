<div class="main d-flex flex-column justify-content-center align-items-center">
  <h1>These are the restaurants in the area</h1>

  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>

  <div class="container py-4">
    <div class="row g-3">

      <% @restaurants.each do |restaurant| %>

        <div class="col-md-4">

          <%= link_to restaurant_path(restaurant), class: "text-decoration-none" do %>

            <div class="card h-100 text-dark shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= "#{restaurant.name}" %></h5>
                <p class="card-text"><strong>Category:</strong> <%= "#{restaurant.category.capitalize}" %></p>
                <p class="card-text"><small class="text-muted"><%= "#{restaurant.address}" %></small></p>
              </div>
            </div>

          <% end %>

        </div>

      <% end %>

    <ul>
    </div>
  </div>


</div>
