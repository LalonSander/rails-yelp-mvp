<div class="main container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title mb-3"><%= @restaurant.name %></h1>
          <h5 class="card-subtitle mb-3 text-muted">Category: <%= @restaurant.category.capitalize %></h5>

          <p class="mb-2"><strong>Address:</strong> <%= @restaurant.address %></p>
          <p class="mb-2"><strong>Total Reviews:</strong> <%= @restaurant.reviews.count %></p>

          <% if @restaurant.reviews.any? %>
            <h5 class="mt-4">Reviews:</h5>
            <ul class="list-group">
              <% @restaurant.reviews.each do |review| %>
                <li class="list-group-item">
                  <strong>Rating:</strong> <%= review.rating %> / 5 <br>
                  <%= review.content %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No reviews yet.</p>
          <% end %>
          <%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary" %>
          <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </div>
</div>
